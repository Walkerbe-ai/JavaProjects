<Page x:Class="Bilet8.EditTicket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bilet8"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditTicket">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Редактирование билета" FontSize="40" FontFamily="Times New Roman" HorizontalAlignment="Center"/>
        </StackPanel>
        <Viewbox Stretch="Uniform" 
                 Grid.Row="2"
                 MaxWidth="550"
                 MaxHeight="550">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Margin="20">
                <StackPanel>
                    <TextBox x:Name="IdPerfomance" Width="320" FontSize="20" materialDesign:HintAssist.Hint="Введите код спектакля" Margin="10" PreviewTextInput="IdTicket_PreviewTextInput" PreviewKeyDown="IdTicket_PreviewKeyDown"/>
                    <TextBox x:Name="numberTicket" Width="320" FontSize="20" materialDesign:HintAssist.Hint="Введите номер билета" Margin="10" PreviewTextInput="numberTicket_PreviewTextInput" PreviewKeyDown="numberTicket_PreviewKeyDown"/>
                    <DatePicker x:Name="dateBuyTicket" Width="320" FontSize="20" materialDesign:HintAssist.Hint="Выберите дату покупки билета" Margin="10" PreviewTextInput="dateBuyTicket_PreviewTextInput" PreviewKeyDown="dateBuyTicket_PreviewKeyDown">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="IsReadOnly" Value="True"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="Изменить" Margin="0,0,10,0" FontFamily="Times New Roman" Click="Button_Click"/>
                    <Button Content="Отмена" FontFamily="Times New Roman" Click="Button_Click_1"/>
                    <Button Content="Удалить" FontFamily="Times New Roman" Click="Button_Click_2"/>
                </StackPanel>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>
