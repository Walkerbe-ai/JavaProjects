<Page x:Class="Bilet8.EditPerfomance"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bilet8"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPerfomance">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <TextBlock x:Name="TitleText" Text="Редактирование спектакля" FontSize="40" FontFamily="Times New Roman" HorizontalAlignment="Center"/>
        </StackPanel>
        <Viewbox Stretch="Uniform" 
                 Grid.Row="2"
                 MaxWidth="550"
                 MaxHeight="550">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Margin="20">
                <StackPanel>
                    <TextBox x:Name="IdPerfomance" Width="320" FontSize="20" materialDesign:HintAssist.Hint="Введите код спекталя" Margin="10" PreviewKeyDown="IdPerfomance_PreviewKeyDown" PreviewTextInput="IdPerfomance_PreviewTextInput"/>
                    <TextBox x:Name="namePerfomance" Width="320" FontSize="20" materialDesign:HintAssist.Hint="Введите наименование спектакля" Margin="10"/>
                    <DatePicker x:Name="datePerfomance" Width="320" FontSize="20" materialDesign:HintAssist.Hint="Выберите дату спекталя" Margin="10" PreviewTextInput="dateBuyPerfomance_PreviewTextInput" PreviewKeyDown="dateBuyPerfomance_PreviewKeyDown">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="IsReadOnly" Value="True"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button x:Name="AddPerfomanceBtn" Content="Изменить" Margin="0,0,10,0" FontFamily="Times New Roman" Click="Button_Click"/>
                    <Button Content="Отмена" FontFamily="Times New Roman" Click="Button_Click_1" Margin="0,0,10,0"/>
                    <Button Content="Удалить" FontFamily="Times New Roman" Click="Button_Click_2"/>
                </StackPanel>
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ListView x:Name="ticketListView"
                  Grid.Row="1" 
                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                  ScrollViewer.CanContentScroll="True"
                  SelectionMode="Single"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Grid.Column="0" Height="80">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Viewbox
                        Height="60" MouseLeftButtonDown="Viewbox_MouseLeftButtonDown">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock x:Name="idPerfomance"
                                       Grid.Row="0"
                                       FontSize="40"
                                       FontFamily="Times New Roman"
                                       Margin="0 20 0 0"
                                       Text="{Binding idPerfomance}"/>
                                        <TextBlock x:Name="namePerfomance"
                                       Grid.Row="1"
                                       FontSize="40"
                                       FontFamily="Times New Roman"
                                       Margin="0 20 0 0"
                                       Text="{Binding numberTicket}"/>
                                        <TextBlock x:Name="dateBuyTicket"
                                       Grid.Row="2"
                                       FontFamily="Times New Roman"
                                       FontSize="40"
                                       Margin="0 20 0 0"
                                       Text="{Binding dateBuyTicket}"/>
                                    </Grid>
                                </Viewbox>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>
